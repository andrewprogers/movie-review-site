<h1>Edit Movie</h1>

<%if @movie.errors.any?%>
    <%@movie.errors.full_messages.each do |msg|%>
    <div> <%=msg%></div>
    <%end%>
<%end%>
<%= form_for @movie, html: { method: :put } do |f| %>
    <%=    f.label :name%>
    <%=    f.text_field :name%>
    <%=    f.label :description%>
    <%=    f.text_field :description%>
    <%=    f.submit "Update Movie" %>
<%end%>
