<h1>Edit Movie</h1>

<%if @movie.errors.any?%>
    <%@movie.errors.full_messages.each do |msg|%>
    <div> <%=msg%></div>
    <%end%>
<%end%>
<%= form_for @movie, html: { method: :put } do |f| %>
    <%=    f.label :name%>
    <%=    f.text_field :name%>
    <%=    f.label :description%>
    <%=    f.text_field :description%>
    <%=    f.submit "Update Movie" %>
<%end%>

<h3>Delete Movie</h3>

<% if user_signed_in? %>
  <% if (@movie.user == current_user) %>
  <p><%= button_to "Delete Movie", @movie, data: { confirm: "Are you sure?" }, method: :delete %></p>
  <% end %>
<% end %>
